<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.uottawa.cookingwithgarzon">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".SelectSearchActivity" />
        <activity android:name=".FindIngredientActivity" />
        <activity android:name=".IngredientSearchResult" />
        <activity
            android:name=".FindRecipeActivity"
            android:label="@string/title_activity_recipe_search"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".RecipePreview" />
        <activity
            android:name=".CreateRecipe"
            android:label="@string/title_activity_create_recipe"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RecipeInstruction"
            android:label="@string/title_activity_recipe_instruction"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".InstructionStep" />
        <activity
            android:name=".FavoriteRecipe"
            android:label="@string/title_activity_favorite_recipe"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RecipeIngredient"
            android:label="@string/title_activity_recipe_ingredient"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ShoppingCartActivity"
            android:label="@string/title_activity_shopping_cart"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".SelectCreateActivity" />
        <activity android:name=".CreateCuisineActivity" />
        <activity android:name=".CreateIngredientActivity" />
        <activity
            android:name=".RecipeView"
            android:label="@string/title_activity_recipe_view"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".CreateMealActivity"></activity>
    </application>

</manifest>