        <activity
            android:name=".CuisineSearchActivity"
            android:label="Search for Cuisine"/>

        <activity
            android:name=".CuisineSearchResultActivity"
            android:label="Result"/>

        <activity
            android:name=".RecipeSearchActivity"
            android:label="@string/title_activity_recipe_search"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".RecipePreview"
            android:label="Preview Recipe" />
        <activity
            android:name=".CreateRecipe"
            android:label="@string/title_activity_create_recipe"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CreateRecipeInstructionActivity"
            android:label="@string/title_activity_recipe_instruction"
