<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.uottawa.cookingwithgarzon">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SelectSearchActivity"
            android:label="@string/title_activity_select_search"/>
        <activity
            android:name=".IngredientSearchActivity"
            android:label="@string/title_activity_ingredient_search"
            android:launchMode="singleInstance" />
        <activity
            android:name=".IngredientSearchResultActivity"
            android:label="@string/title_activity_ingredient_search_result"
            android:launchMode="singleInstance" />

        <activity
            android:name=".CuisineSearchActivity"
            android:label="@string/title_activity_cuisine_search"/>
        <activity
            android:name=".CuisineSearchResultActivity"
            android:label="@string/title_activity_cuisine_search_result"/>
        <activity
            android:name=".RecipeSearchActivity"
            android:label="@string/title_activity_recipe_search"/>
        <activity
            android:name=".RecipeSearchResult"
            android:label="@string/title_activity_recipe_search_Result"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity
            android:name=".CreateOrEditRecipeActivity"
            android:label="@string/title_activity_create_recipe"
            android:windowSoftInputMode="stateHidden"/>
        <activity
            android:name=".CreateOrEditStepActivity"
            android:windowSoftInputMode="stateHidden"
            android:label="@string/title_activity_instruction_step" />
        <activity
            android:name=".FavouriteRecipeActivity"
            android:label="@string/title_activity_favorite_recipe"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".CreateOrEditRecipeIngredientActivity"
            android:label="@string/title_activity_recipe_ingredient"
            android:launchMode="singleInstance" />
        <activity
            android:name=".ShoppingCartActivity"
            android:label="@string/title_activity_shopping_cart" />
        <activity
            android:name=".SelectCreateActivity"
            android:label="@string/title_activity_select_create"
            android:launchMode="singleInstance" />
        <activity
            android:name=".CreateOrEditCuisineActivity"
            android:label="@string/title_activity_create_cuisine" />
        <activity
            android:name=".CreateOrEditIngredientActivity"
            android:label="@string/title_activity_create_ingredient"
            android:launchMode="singleInstance" />
        <activity
            android:name=".RecipeViewActivity"
            android:label="@string/title_activity_recipe_view"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".CreateOrEditMealTypeActivity"
            android:label="@string/title_activity_create_meal"/>
        <activity
            android:name=".HelpActivity"
            android:label="@string/title_activity_help" />
        <activity
            android:name=".MealTypeSearchActivity"
            android:label="@string/title_activity_meal_type_search" />
        <activity
            android:name=".MealTypeSearchResultActivity"
            android:label="@string/title_activity_meal_type_search" />
    </application>

</manifest>