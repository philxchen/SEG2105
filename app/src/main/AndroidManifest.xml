        <activity
            android:name=".CreateCuisineActivity"
            android:label="Create Cuisine" />
        <activity
            android:name=".CreateIngredientActivity"
            android:label="Create Ingredient" />
        <activity
            android:name=".RecipeView"
            android:label="@string/title_activity_recipe_view"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateMealActivity"
            android:label="Create Meal"/>
        <activity
            android:name=".HelpActivity"
            android:label="Help" />
        <activity
            android:name=".MealTypeSearchActivity"
            android:label="Search for Meal Type" />
        <activity
            android:name=".MealTypeSearchResultActivity"
            android:label="Result" />
