<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.TextInputLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="ca.uottawa.cookingwithgarzon.RecipeSearchActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Find a Recipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="36sp"
            android:textAlignment="center"
            android:layout_weight="0.05"
            android:id="@+id/searchRecipeTitle"
            android:paddingTop="20dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="62dp" />

        <TextView
            android:text="Search recipe by..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:id="@+id/searchText"
            android:textAlignment="center"
            android:layout_weight="0.05" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="42dp" />

        <EditText
            android:layout_width="match_parent"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/nameTxt"
            android:maxLines="1"
            android:selectAllOnFocus="true"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:hint="Recipe name" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight="0.05" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:selectAllOnFocus="true"
            android:ems="10"
            android:id="@+id/ingredientTxt"
            tools:gravity="center_vertical|fill_vertical"
            android:layout_weight="1"
            android:textAlignment="center"
            android:hint="Ingredients" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight="0.05" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:selectAllOnFocus="true"
            android:id="@+id/mealTypeTxt"
            tools:gravity="center_vertical|fill_vertical"
            android:layout_weight="1"
            android:textAlignment="center"
            android:hint="Meal" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:selectAllOnFocus="true"
            android:id="@+id/cuisineTxt"
            tools:gravity="center_vertical|fill_vertical"
            android:textAlignment="center"
            android:hint="Cuisine" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="36dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.05">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="96dp"
                android:layout_height="match_parent"></LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.03">

                <Button
                    android:text="Get Cooking!"
                    android:layout_width="200dp"
                    android:id="@+id/search_recipe_button"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_height="80dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:gravity="center_horizontal|center"
                android:weightSum="1">

                <android.support.design.widget.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    app:fabSize="mini"
                    app:srcCompat="@android:drawable/ic_menu_help"
                    android:id="@+id/helpBtn"
                    app:backgroundTint="?attr/colorButtonNormal"
                    android:layout_weight="0.18" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</android.support.design.widget.TextInputLayout>
