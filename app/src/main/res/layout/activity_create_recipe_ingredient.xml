<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_recipe_ingredient"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.uottawa.cookingwithgarzon.CreateRecipeIngredientActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <TextView
            android:text="Create Recipe Ingredient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="36sp"
            android:textAlignment="center"
            android:layout_weight="0.05"
            android:id="@+id/createRecipeIngredientTitle" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.17" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.05">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textAlignment="center"
                android:hint="Ingredient"
                android:id="@+id/recipeIngredientTxt"
                android:textSize="24sp"
                android:layout_weight="1"
                android:layout_margin="5dp" />

            <Button
                android:text="Choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chooseIngredientBtn"
                android:layout_weight="1"
                android:layout_margin="5dp" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.17" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:textAlignment="center"
            android:hint="Quantity"
            android:id="@+id/recipeIngredientQuantityTxt"
            android:textSize="24sp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:textAlignment="center"
            android:hint="Unit of measurement"
            android:id="@+id/recipeIngredientUnitTxt"
            android:textSize="24sp"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.23" />

        <Button
            android:text="Save"
            android:layout_width="138dp"
            android:layout_height="57dp"
            android:id="@+id/saveRecipeIngredientBtn"
            android:layout_gravity="center_horizontal"  />

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>
