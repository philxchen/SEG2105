<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.uottawa.cookingwithgarzon.MainActivity"
    android:background="@android:color/background_dark">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        android:paddingTop="30dp"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/logo_trans"
            android:id="@+id/imageView"
            android:layout_weight="0.21" />

        <Button
            android:text="Search"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_search_black_24dp"
            android:id="@+id/searchBtn"
            android:layout_width="250dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_weight="0.08"
            android:layout_height="5dp" />

        <Button
            android:text="Create"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_add_black_24dp"
            android:id="@+id/createBtn" />

        <Space
            android:layout_width="match_parent"
            android:layout_weight="0.08"
            android:layout_height="5dp" />

        <Button
            android:text="Favourites"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_stars_black_24dp"
            android:id="@+id/favouritesBtn" />

        <Space
            android:layout_width="match_parent"
            android:layout_weight="0.08"
            android:layout_height="5dp" />

        <Button
            android:text="Shopping Cart"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_shopping_basket_black_24dp"
            android:id="@+id/shoppingCartBtn" />

        <Button
            android:text="Clear Database"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/clearDbBtn"
            android:layout_weight="0.21" />
    </LinearLayout>

</RelativeLayout>
