<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ca.uottawa.cookingwithgarzon.MainActivity">

    <!--android:background="@drawable/recipe"-->

    <!--android:background="@drawable/ingredients"-->

    <ImageView
        android:src="@drawable/cooking_with_garzon"
        android:layout_width="match_parent"
        android:layout_height="206dp"
        android:id="@+id/imageView" />

    <Button
        android:text="Search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_search_black_24dp"
        android:id="@+id/searchBtn" />

    <Button
        android:text="New Recipe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_add_black_24dp"
        android:id="@+id/createRecipeBtn" />

    <Button
        android:text="Favourites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_stars_black_24dp"
        android:id="@+id/favouritesBtn" />

    <Button
        android:text="Shopping Cart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_shopping_basket_black_24dp"
        android:id="@+id/shoppingCartBtn" />
</LinearLayout>
