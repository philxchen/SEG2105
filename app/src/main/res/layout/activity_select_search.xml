<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_select_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.uottawa.cookingwithgarzon.SelectSearchActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:weightSum="1">

        <TextView
            android:text="Find a..."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/selectCreateHeader"
            android:layout_weight="0.06"
            android:textSize="36sp"
            tools:textAlignment="center" />

        <Button
            android:text="Recipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/findRecipeBtn"
            android:layout_weight="0.06" />

        <Button
            android:text="Ingredient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/findIngredientBtn"
            android:layout_weight="0.06" />

        <Button
            android:text="Cuisine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/findCuisineBtn"
            android:layout_weight="0.06" />

        <Button
            android:text="Meal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/findMealBtn"
            android:layout_weight="0.06" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.05"
        android:gravity="bottom|end"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <android.support.design.widget.FloatingActionButton
            android:layout_width="59dp"
            android:layout_height="52dp"
            android:clickable="true"
            app:fabSize="mini"
            app:srcCompat="@android:drawable/ic_menu_help"
            android:id="@+id/helpBtn"
            app:backgroundTint="@android:color/transparent"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="10dp"  />
    </LinearLayout>
</RelativeLayout>
