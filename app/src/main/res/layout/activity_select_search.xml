<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_select_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="ca.uottawa.cookingwithgarzon.SelectSearchActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:weightSum="1">

        <TextView
            android:text="Find a Thing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/select_create_header"
            android:layout_weight="0.06"
            android:textSize="36sp"
            tools:textAlignment="center" />

        <Button
            android:text="Find Recipes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/findRecipeBtn"
            android:layout_weight="0.06" />

        <Button
            android:text="Find Ingredients"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/findIngredientBtn"
            android:layout_weight="0.06" />

        <Button
            android:text="Find Cuisine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/findCuisineBtn"
            android:layout_weight="0.06" />

        <Button
            android:text="Find meal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/findMealBtn"
            android:layout_weight="0.06" />

    </LinearLayout>
</RelativeLayout>
